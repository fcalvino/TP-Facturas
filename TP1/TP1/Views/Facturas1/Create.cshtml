        <div>
            <label>Cantidad</label>
            <input class="form-control" type="text" name="cantidad" value="" />
        </div>
        <div>
            <label>Articulo</label>
            <select class="form-control" name="articulo">
                <option>
                    @Html.LabelFor(m => m.facturadetalle.Articuloid, "Elija un Articulo")
